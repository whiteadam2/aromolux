{
  "openapi": "3.0.3",
  "info": {
    "title": "Orders REST API",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3020/",
      "description": "Web developer server"
    },
    {
      "url": "https://aromomania.ru/orders",
      "description": "Production server"
    }
  ],
  "paths": {
    "/orders": {
      "post": {
        "summary": "Place order and process it via e-Shop",
        "tags": ["Orders"],
        "operationId": "createOrder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order was placed successfully"
          },
          "500": {
            "description": "Internal server Error"
          },
          "422": {
            "description": "Validation Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "cart": {
                "type": "object",
                "properties": {
                  "orders": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string", "example": "1829" },
                        "name": {
                          "type": "string",
                          "example": "Armani Acqua di Gio pour homme 30 ml"
                        },
                        "picture": {
                          "type": "string",
                          "example": "https://aromomama.ru/files/products/giorgio-armani-acqua-di-gio-pour-homme-100ml.500x500.jpg?081c7ecd8603e5e96c040d56adc2e2b1"
                        },
                        "price": {
                          "type": "number",
                          "format": "float",
                          "example": 430
                        },
                        "oldprice": {
                          "type": "number",
                          "format": "float",
                          "example": 2000
                        },
                        "count": {
                          "type": "number",
                          "format": "float",
                          "example": 5
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "picture",
                        "price",
                        "oldprice",
                        "count"
                      ],
                      "additionalProperties": false
                    },
                    "minItems": 1
                  },
                  "total": {
                    "type": "number",
                    "format": "float",
                    "example": 430
                  }
                },
                "required": ["orders", "total"],
                "additionalProperties": false
              },
              "user": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Swagger Client" },
                  "phoneNumber": {
                    "type": "string",
                    "example": "+380992101214"
                  }
                },
                "required": ["name", "phoneNumber"],
                "additionalProperties": false
              }
            },
            "required": ["cart", "user"],
            "additionalProperties": false
          },
          "queryId": { "type": "string", "example": "324236746376bd" }
        },
        "required": ["data", "queryId"],
        "additionalProperties": false
      }
    }
  }
}
